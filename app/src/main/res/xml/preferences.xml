<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="security"
        app:title="Sécurité">

        <Preference
            app:key="change_password"
            app:summary="Modifier le mot de passe maître"
            app:title="Changer de mot de passe" />

        <SeekBarPreference
            android:max="365"
            app:defaultValue="90"
            app:key="days_before_password_reminder"
            app:min="7"
            app:showSeekBarValue="true"
            app:summary="Nombre de jours avant le rappel de changement de mot de passe"
            app:title="Rappel de sécurité" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="display"
        app:title="Affichage">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="small_account_layout"
            app:title="Affichage réduit" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="others"
        app:title="Informations">

        <Preference
            app:key="feedback"
            app:summary="Proposer une amélioration ou signaler un bug"
            app:title="Retour d'expérience" />

        <Preference
            app:key="about"
            app:selectable="false"
            app:summary="@string/app_version"
            app:title="À propos" />

    </PreferenceCategory>


</PreferenceScreen>
